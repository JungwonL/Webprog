doctype html1
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")
    title 탭타이틀
    //- // Bootstrap core CSS
    style
      include ../../vendor/bootstrap/css/bootstrap.min.css
      include ../../css/clean-blog.min.css
    script(src="http://code.jquery.com/jquery-1.11.1.min.js")
  body
    // Navigation
    include ./navigation.pug
    // Page Header
    include ./header.pug
    // Main Content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .post-preview
            if topic
              a
                h2.post-title
                  =topic.title
                h3.post-subtitle
                  =topic.description
                  div= '       by '+topic.author
            else if topics
              each topic in topics
                a(href="/topic/new/"+topic.id)
                  h2.post-title
                    =topic.title
                  h3.post-subtitle
                    =topic.description
                hr
            else
              a(href="/글리스트못불러옴")
                h2.post-title
                  | 로그인을 하시면 본인이 쓴 글들이 이곳에 나타납니다 ^&^
          // Pager
    hr
    // Footer
    footer
      //- include footer.pug
