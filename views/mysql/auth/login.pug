doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")
    title 탭타이틀
    style
      include ../../../css/util.css
      include ../../../css/main.css
      include ../../../vendor/bootstrap/css/bootstrap.min.css
      include ../../../css/clean-blog.min.css
  body
    // Navigation
    include ../navigation.pug
    // Page Header
    header.masthead(style="background-image: url('../img/"+number+".jpg')")
      include ../page_header.pug
    // Main Content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .post-preview
            span.login100-form-title.p-b-32
              | Login
            form.login100-form(action='/auth/login', method='post')
              span.txt1.p-b-11
                | Username
              div
                input.input100(type='text', name='username', placeholder='username')
              span.txt1.p-b-11
                | Password
              div
                input.input100(type='password', name='password', placeholder='password')
              p
                input.login100-form-btn(type='submit')
          // Pager
          .clearfix
    hr
    // Footer
    footer
