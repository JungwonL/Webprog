doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")
    title 탭타이틀
    style
      include ../../../css/util.css
      include ../../../css/main.css
      include ../../../vendor/bootstrap/css/bootstrap.min.css
      include ../../../css/clean-blog.min.css
    script(src="http://code.jquery.com/jquery-1.11.1.min.js")
    script(type="text/javascript").
      function accounttest(){
        $.ajax({
          url:'/auth/logincheck',
          type:'post',
          dataType:'text',
          data:{
            username:$('#username').val(),
            password:$('#password').val()
          },
          success:function(data){
            if(data=='로그인성공'){
              alert('로그인 성공');
            }else{
              alert('로그인 실패');
            }
          }
        });
      }
  body
    // Navigation
    include ../navigation.pug
    // Page Header
    include ../header.pug
    // Main Content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .post-preview
            span.login100-form-title.p-b-32
              | Login
            form.login100-form(action='/auth/login', method='post')
              span.txt1.p-b-11
                | Username
              div
                input.input100(type='text', name='username', placeholder='username',id='username')
              span.txt1.p-b-11
                | Password
              div
                input.input100(type='password', name='password', placeholder='password',id='password')
              p
                input.login100-form-btn(type='submit',id="btnLogin",onclick="accounttest()")
          // Pager
          .topicFunc
    hr
    // Footer
    footer
