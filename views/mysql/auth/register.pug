    script(src="http://code.jquery.com/jquery-1.11.1.min.js")
    script(type="text/javascript").
      function idnullcheck(){
        alert('ajax진입');
        $.ajax({
          url:'/auth/idcheck',
          type:'post',
          dataType:'text',
          data:{
            username:$('#username').val()
          },
          success:function(data){
            if(data==$('#username').val()){
              alert('아이디사용가능');
              $('#username').val(data);
            }else{
              alert('아이디 사용중 희망아이디 사용불가');
              $('#username').val(data); 
              event.preventDefult();
            }
          }
        });
      }
        function passsamecheck(){
          var passck1=$('#password').val();
          var passck2=$('#passwordck').val();
          if(passck1 !=passck2){
            alert("입력하신 두비밀번호가 일치하지 않습니다.");
            $('#password').val('');
            $('#passwordck').val('');
            return false;
          }
        }
        function picturenullcheck(){
          var picture=$('input[name="picture"]:checked').val();
        }
      $(document).ready(function(){
        $('#btnRegister').click(function(){
          var username=$('#username').val();
          var passck1=$('#password').val();
          var passck2=$('#passwordck').val();
          var picture=$('input[name="picture"]:checked').val();
          if(username ==''){
            alert("공백의 아이디로 회원가입하실 수 없습니다.");
            return false;
          }
          if(passck1 !=passck2){
            alert("입력하신 두비밀번호가 일치하지 않습니다.");
            $('#password').val('');
            $('#passwordck').val('');
            return false;
          }
          if(passck1 == ''){
            alert("공백의 비밀번호로 회원가입하실 수 없습니다.");
            return false;
          }
          if(picture==undefined||picture==''){
            alert("배경사진을 고르지 않았습니다.");
            return false;
          }
        })
      })
  body
    // Navigation
    include ../navigation.pug
    // Page Header
