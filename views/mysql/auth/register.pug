    meta(name="description" content="")
    meta(name="author" content="")
    title 탭타이틀
    style
      include ../../../css/util.css
      include ../../../css/main.css
      include ../../../vendor/bootstrap/css/bootstrap.min.css
      include ../../../css/clean-blog.min.css
    script(src="http://code.jquery.com/jquery-1.11.1.min.js")
    script(type="text/javascript").
      $(document).ready(function(){
        $('#btnRegister').click(function(){
          var passck1=$('#password').val();
          var username=$('#username').val();
          var passck2=$('#passwordck').val();
          if(username ==''){
            alert("공백의 아이디로 회원가입하실 수 없습니다.");
            return false;
          }
          if(passck1 !=passck2){
            alert("입력하신 두비밀번호가 일치하지 않습니다.");
            return false;
          }
          if(passck1 == passck2){
            alert("회원가입이 완료되었습니다.");
            return true;
          }   
        })
      })
  body
    // Navigation
    include ../navigation.pug
    // Page Header
    header.masthead(style="background-image: url('../img/"+number+".jpg')")
      include ../header.pug
    // Main Content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .post-preview
            span.login100-form-title.p-b-32
              | Register
            form.login100-form(action='/auth/register', method='post')
              span.txt1.p-b-11
                | Username
              div
                input.input100(type='text', name='username', placeholder='username',id='username')
              span.txt1.p-b-11
                | Password
              div
                input.input100(type='password', name='password', placeholder='password',id='password')
              span.txt1.p-b-11
                | Password Check
              div
                input.input100(type='password', name='passwordck', placeholder='password ckeck',id='passwordck')
              p
              span.txt1.p-b-11
                | Select your main picture
              div
                input.login100-form-btn(type='submit',style="margin-top:18px;",id="btnRegister")
              div(style="text-align:center;width:1400px;height:220px;")
                - for(var i=1; i <5; i++){
                  div(style="display:inline;width:320px;height:210px;margin:5px;")
                    label
                      img(src="../../img/"+i+".jpg" style="width:300px;height:200px;")
                      div(style="text-align:center")
                        input(type='radio', name="picture", value=i)
                  -}

    hr
