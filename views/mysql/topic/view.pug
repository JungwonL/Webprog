    //- // Custom styles for this template
    //- link(href="css/clean-blog.min.css" rel="stylesheet" type="text/css")
  body
    // Navigation
    include ../navigation.pug
    // Page Header
    header.masthead(style="background-image: url('../img/"+number+".jpg')")
      include ../page_header.pug
    // Main Content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .post-preview
            if topic
              h2.post-title
                =topic.title
              h3.post-subtitle
                =topic.description
                div= '       by '+topic.author
            else if topics
              each topic in topics
                a(href="/topic/"+topic.id)
                  h2.post-title
                    =topic.title
                  h3.post-subtitle
                    =topic.description
                hr
            else
              a(href="/글리스트못불러옴")
                h2.post-title
                  | 로그인을 해주세요!!
                h3.post-subtitle
                  | 로그인을 하시면 본인이 쓴 글들이 이곳에 나타납니다 ^\&^
          // Pager
          .clearfix
            
            a(href='/topic/add') add  
            if topic
              a(href='/topic/'+topic.id+'/edit') edit  
              a(href='/topic/'+topic.id+'/delete') delete  
            a(href='/topic') list
            a.btn.btn-primary.float-right(href="#") 이버튼재활용생각해봅시다 →
    hr
    // Footer
    footer
