doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")
    title 탭타이틀
    //- // Bootstrap core CSS
    style
      include ../../../vendor/bootstrap/css/bootstrap.min.css
      include ../../../css/clean-blog.min.css
  body
    // Navigation
    include ../navigation.pug
    // Page Header
    header.masthead(style="background-image: url('../img/"+number+".jpg')")
      .overlay
      .container
        .row
          .col-lg-8.col-md-10.mx-auto
            .site-heading
              h1 정중앙 큰글
              span.subheading 정중앙 큰글아래 작은글
    // Main Content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .post-preview
            h1='Delete '+topic.title
              form(action='/topic/'+topic.id+'/delete' method='post')
                  p
                    input(type='submit' value='yes')
              a(href='/topic/'+topic.id) no
         
          // Pager
          .clearfix
            
            a(href='/topic/add') add  
            if topic
              a(href='/topic/'+topic.id+'/edit') edit  
              a(href='/topic/'+topic.id+'/delete') delete
            a(href='/topic') list  
    hr
    // Footer
    footer
      .container
        .row
          .col-lg-8.col-md-10.mx-auto
            ul.list-inline.text-center
              li.list-inline-item
                a(href="#")
                  span.fa-stack.fa-lg
                    i.fas.fa-circle.fa-stack-2x
                    i.fab.fa-twitter.fa-stack-1x.fa-inverse
              li.list-inline-item
                a(href="#")
                  span.fa-stack.fa-lg
                    i.fas.fa-circle.fa-stack-2x
                    i.fab.fa-facebook-f.fa-stack-1x.fa-inverse
              li.list-inline-item
                a(href="#")
                  span.fa-stack.fa-lg
                    i.fas.fa-circle.fa-stack-2x
                    i.fab.fa-github.fa-stack-1x.fa-inverse
            p.copyright.text-muted Copyright © Your Website 2018
    // Bootstrap core JavaScript
    script(src="./vendor/jquery/jquery.min.js")
    script(src="./vendor/bootstrap/js/bootstrap.bundle.min.js")
    // Custom scripts for this template
    script(src="./js/clean-blog.min.js")
